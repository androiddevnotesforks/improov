<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/nav_graph"
            app:startDestination="@id/navigation_goals">

    <fragment android:id="@+id/navigation_goals"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.goals.GoalsFragment"
              android:label="fragment_goals"
              tools:layout="@layout/fragment_goals">

        <action android:id="@+id/action_nav_goals_to_goalFormFragment" app:destination="@id/goalFormFragment"/>
        <action android:id="@+id/action_nav_goals_to_goalFragment" app:destination="@id/goalFragment"/>

    </fragment>

    <fragment android:id="@+id/navigation_stats"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.stats.StatsFragment"
              android:label="fragment_stats"
              tools:layout="@layout/fragment_stats">

    </fragment>

    <fragment android:id="@+id/navigation_profile"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.profile.ProfileFragment"
              android:label="fragment_profile"
              tools:layout="@layout/fragment_profile">

    </fragment>

    <fragment android:id="@+id/navigation_search"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.search.SearchFragment"
              android:label="fragment_search"
              tools:layout="@layout/fragment_search">

    </fragment>

    <fragment android:id="@+id/goalFormFragment"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.goalForm.GoalFormFragment"
              android:label="fragment_goal_form"
              tools:layout="@layout/fragment_goal_form">

        <argument android:name="goalId" app:argType="long"/>

        <action android:id="@+id/action_goalFormFragment_to_goalFragment" app:destination="@id/goalFragment"/>

    </fragment>

    <fragment android:id="@+id/goalFragment"
              android:name="com.rafaelfelipeac.mountains.ui.fragments.goal.GoalFragment"
              android:label="fragment_goal"
              tools:layout="@layout/fragment_goal">

        <argument android:name="goalId" app:argType="long"/>

        <action android:id="@+id/action_goalFragment_to_goalFormFragment" app:destination="@id/goalFormFragment"/>
        <action android:id="@+id/action_goalFragment_to_nav_goals" app:destination="@id/navigation_goals"/>

    </fragment>

</navigation>