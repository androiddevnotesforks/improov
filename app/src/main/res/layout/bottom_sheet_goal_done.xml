<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/bottom_sheet_done_goal"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@color/colorPrimaryDarkOne">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorPrimaryDarkTwo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Há itens pendentes nesse objetivo. \n\n Deseja dar como concluído?"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="64dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>

    <android.widget.Button
            android:id="@+id/bottom_sheet_button_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIM"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/view2"
    />

    <View
            android:layout_width="1dp"
            android:layout_height="0dp" android:id="@+id/view2"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <android.widget.Button
            android:id="@+id/bottom_sheet_button_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃO"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toEndOf="@+id/view2" android:layout_marginStart="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>