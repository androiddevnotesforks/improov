<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/habit_goal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/rounded_primary_dark_two">

    <View
            android:id="@+id/habit_done_indicator"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:background="@drawable/rounded_primary"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" />

    <TextView
            android:id="@+id/habit_done_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/habit_done_message"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="64dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/habit_done_indicator"/>

    <android.widget.Button
            android:id="@+id/habit_done_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/habit_done_ok"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/habit_done_message"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>