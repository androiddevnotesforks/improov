<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.fragments.forgotPassword.ForgotPasswordFragment"
        android:background="@color/colorPrimaryDarkOne">

    <ImageView
            android:id="@+id/forgot_password_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_item_done"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/forgot_password_email_til"
            app:layout_constraintVertical_bias="0.3"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/forgot_password_email_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="@string/fragment_forgot_password_email_til_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/forgot_password_send_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/login_image"
            app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forgot_password_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
            android:id="@+id/forgot_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/forgot_password_email_til"
            app:layout_constraintStart_toStartOf="@+id/forgot_password_email_til"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintBottom_toBottomOf="@+id/forgot_password_email_til"/>

    <TextView
            android:id="@+id/forgot_password_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/forgot_password_email_til"
            app:layout_constraintEnd_toEndOf="@+id/forgot_password_email_til"
            app:layout_constraintStart_toStartOf="@+id/forgot_password_email_til"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_marginTop="4dp"/>

    <android.widget.Button
            android:id="@+id/forgot_password_send_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/fragment_forgot_password_send_button_message"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>