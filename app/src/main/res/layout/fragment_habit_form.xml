<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".ui.fragments.habitForm.HabitFormFragment"
        android:background="@color/colorPrimaryDarkOne">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/habit_form_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/habit_form_name_til"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:inputType="numberDecimal|numberSigned"
                android:textColor="@color/colorPrimary"
                android:hint="Title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/habit_form_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"/>

        </com.google.android.material.textfield.TextInputLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/habit_form_habit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/habit_form_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:id="@+id/habit_form_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotina"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habit_form_help3"
                android:layout_width="48dp"
                android:layout_height="32dp"
                app:layout_constraintTop_toTopOf="@+id/habit_form_text"
                app:layout_constraintBottom_toBottomOf="@+id/habit_form_text"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_help"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habit_form_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/habit_form_text"
                app:layout_constraintHorizontal_bias="0.0">

            <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Todo dia"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/radioButton1"
                    app:layout_constraintTop_toTopOf="@+id/radioButton1"
                    app:layout_constraintBottom_toBottomOf="@+id/radioButton1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habit_form_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@+id/habit_form_option_1">

            <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.0"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alguns dias por semana"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/radioButton2"
                    app:layout_constraintTop_toTopOf="@+id/radioButton2"
                    app:layout_constraintBottom_toBottomOf="@+id/radioButton2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/block_of_radius2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/radioButton2"
                    tools:visibility="visible">

                <CheckBox
                        android:id="@+id/weekDay1"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Domingo"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"/>

                <CheckBox
                        android:id="@+id/weekDay2"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Segunda-feira"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintTop_toTopOf="@+id/weekDay1"
                        app:layout_constraintStart_toEndOf="@+id/weekDay1"
                        app:layout_constraintBottom_toBottomOf="@+id/weekDay1"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"/>

                <CheckBox
                        android:id="@+id/weekDay3"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Terça-feira"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/weekDay1"
                        app:layout_constraintStart_toStartOf="parent"/>

                <CheckBox
                        android:id="@+id/weekDay4"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Quarta-feira"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintTop_toTopOf="@+id/weekDay3"
                        app:layout_constraintBottom_toBottomOf="@+id/weekDay3"
                        app:layout_constraintStart_toEndOf="@+id/weekDay3"/>

                <CheckBox
                        android:id="@+id/weekDay5"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Quinta-feira"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/weekDay3"/>

                <CheckBox
                        android:id="@+id/weekDay6"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Sexta-feira"
                        android:textColor="@color/colorPrimary"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/weekDay5"
                        app:layout_constraintStart_toEndOf="@+id/weekDay5"
                        app:layout_constraintBottom_toBottomOf="@+id/weekDay5"/>

                <CheckBox
                        android:id="@+id/weekDay7"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text="Sábado"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/weekDay5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habit_form_option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/habit_form_option_2">

            <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/habit_form_days_custom_1"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_form_days_custom_1"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"/>

            <EditText
                    android:id="@+id/habit_form_days_custom_1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/radioButton3"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    app:layout_constraintTop_toTopOf="@+id/habit_form_days"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_form_days"
                    android:inputType="number"/>

            <TextView
                    android:id="@+id/habit_form_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dias por"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/habit_form_days_custom_1"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <Spinner
                    android:id="@+id/habit_form_periods_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    app:layout_constraintStart_toEndOf="@+id/habit_form_days"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_form_days"
                    android:backgroundTint="@color/colorPrimary"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="@+id/habit_form_days"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/habit_form_option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                app:layout_constraintTop_toBottomOf="@+id/habit_form_option_3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="24dp"
                app:layout_constraintVertical_bias="0.0">

            <RadioButton
                    android:id="@+id/radioButton4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                    android:id="@+id/habit_form_days_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A cada "
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/radioButton4"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@+id/radioButton4"
                    app:layout_constraintBottom_toBottomOf="@+id/radioButton4"             />

            <EditText
                    android:id="@+id/habit_form_add_days"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/habit_form_days_add"
                    app:layout_constraintTop_toTopOf="@+id/habit_form_days_add"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_form_days_add"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dias"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintStart_toEndOf="@+id/habit_form_add_days"
                    app:layout_constraintTop_toTopOf="@+id/habit_form_add_days"
                    app:layout_constraintBottom_toBottomOf="@+id/habit_form_add_days"
                    android:layout_marginStart="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
