<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDarkOne"
        tools:context=".features.profile.presentation.profileedit.ProfileEditFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/profile_edit_name_hint"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="60dp"
                    android:hint="@string/profile_edit_name_hint"
                    android:textColor="@color/colorPrimary"
                    app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                    app:layout_constraintBottom_toTopOf="@+id/profile_edit_save_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/profile_edit_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textCapSentences"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/profile_edit_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/profile_edit_name_hint"
                    app:layout_constraintHorizontal_bias="0.9"
                    app:layout_constraintStart_toStartOf="@+id/profile_edit_name_hint"
                    app:layout_constraintTop_toBottomOf="@+id/profile_edit_name_hint" />

            <android.widget.Button
                    android:id="@+id/profile_edit_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_button"
                    android:text="@string/profile_edit_save_message"
                    android:textColor="@color/colorPrimaryDarkOne"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
