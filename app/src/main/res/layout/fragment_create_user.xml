<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.createUser.CreateUserFragment"
        android:background="@color/colorPrimaryDarkOne">

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_name_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="Nome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_email_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/create_name_til">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_password_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/create_email_til">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_confirm_password_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="Confirm Password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/create_password_til">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
            android:id="@+id/create_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Criar conta"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="32dp" app:layout_constraintTop_toBottomOf="@+id/create_confirm_password_til"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>