<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.createUser.CreateUserFragment"
        android:background="@color/colorPrimaryDarkOne">

    <ImageView
            android:id="@+id/create_user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@mipmap/ic_item_done"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/create_user_name_til"
            app:layout_constraintVertical_bias="0.50"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_user_name_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="@string/fragment_create_user_name_til_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/create_user_email_til"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/login_image"
            app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_user_email_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="@string/fragment_create_user_email_til_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/create_user_password_til">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_user_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_user_password_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="@string/fragment_create_user_password_til_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toTopOf="@+id/create_user_confirm_password_til">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_user_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageButton
            android:id="@+id/create_user_eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"
            android:background="@drawable/ic_remove_red_eye"
            app:layout_constraintBottom_toBottomOf="@+id/create_user_confirm_password_til"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/create_user_confirm_password_til"
            app:layout_constraintStart_toStartOf="@+id/create_user_confirm_password_til"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_bias="0.9"/>

    <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/create_user_confirm_password_til"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:inputType="numberDecimal|numberSigned"
            android:textColor="@color/colorPrimary"
            android:hint="@string/fragment_create_user_confirm_password_til_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/create_user_create_button">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/create_user_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
            android:id="@+id/create_user_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/create_user_confirm_password_til"
            app:layout_constraintStart_toStartOf="@+id/create_user_confirm_password_til"
            android:layout_marginStart="8dp"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintBottom_toBottomOf="@+id/create_user_confirm_password_til"/>

    <TextView
            android:id="@+id/create_user_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toBottomOf="@+id/create_user_confirm_password_til"
            app:layout_constraintEnd_toEndOf="@+id/create_user_confirm_password_til"
            app:layout_constraintStart_toStartOf="@+id/create_user_confirm_password_til"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_marginTop="4dp"/>

    <android.widget.Button
            android:id="@+id/create_user_create_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/fragment_create_user_create_button_message"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>