<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/item_cardview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="2dp"
        android:focusable="true">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/goal_delete_view"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/colorRed">

        <ImageView android:id="@+id/item_delete_image_left"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_delete"
                   android:layout_centerVertical="true"
                   android:layout_marginBottom="14dp"
                   card_view:layout_constraintBottom_toBottomOf="parent"
                   card_view:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="32dp"
                   card_view:layout_constraintTop_toTopOf="parent"/>

        <ImageView android:id="@+id/item_delete_image_right"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/ic_delete"
                   android:layout_centerVertical="true"
                   card_view:layout_constraintTop_toTopOf="parent"
                   android:layout_marginBottom="14dp"
                   card_view:layout_constraintBottom_toBottomOf="parent"
                   android:layout_marginEnd="32dp"
                   card_view:layout_constraintEnd_toEndOf="parent"/>

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/goal_normal_view"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">

        <TextView
                android:id="@+id/goal_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Nova meta cadastrada"
                android:maxLines="1"
                android:layout_marginStart="8dp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>

        <ImageView
                android:id="@+id/goal_item_progress"
                android:layout_width="250dp"
                android:layout_height="10dp"
                android:layout_marginStart="8dp"
                android:src="@color/colorPrimary"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="24dp"
                card_view:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/goal_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="00/00/00"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="72dp"
                card_view:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

        <ImageView
                android:id="@+id/goal_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:srcCompat="@drawable/ic_drag_indicator"
                card_view:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"
                card_view:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>