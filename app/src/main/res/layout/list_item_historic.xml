<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
android:background="@color/colorPrimaryDarkTwo">

    <TextView
            android:id="@+id/historic_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10/10/2019 - 14h58"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/view2"/>

    <View android:layout_width="1dp" android:layout_height="1dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
          app:layout_constraintTop_toTopOf="parent" android:id="@+id/view2"
          app:layout_constraintHorizontal_bias="0.57"/>

    <TextView
            android:id="@+id/historic_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ 5.51"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view2" android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>