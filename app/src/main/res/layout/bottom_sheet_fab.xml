<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet_fab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/rounded_primary_dark_two">

    <android.widget.Button
            android:id="@+id/bottom_sheet_fab_goal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Objetivo"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@+id/bottom_sheet_fab_close"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginTop="32dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_fab_close"
            app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
            android:id="@+id/bottom_sheet_fab_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_close"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <android.widget.Button
            android:id="@+id/bottom_sheet_fab_routine"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Rotina"
            android:textColor="@color/colorPrimaryDarkOne"
            android:background="@drawable/rounded_button"
            app:layout_constraintStart_toEndOf="@+id/bottom_sheet_fab_close"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_fab_close"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>