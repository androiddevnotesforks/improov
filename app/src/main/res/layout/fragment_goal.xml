<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".features.goal.presentation.goal.GoalFragment"
        android:background="@color/colorPrimaryDarkOne">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goal_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/goal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintHorizontal_bias="0.0"
                android:textColor="@color/colorPrimary"
                android:textSize="26sp"
                android:gravity="center"
                tools:text="Title"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/goal_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_count"
                android:textColor="@color/colorPrimary"
                android:textSize="26sp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/goal_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintHorizontal_bias="1.0"/>

        <TextView
                android:id="@+id/goal_final_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_final_date"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/goal_count"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goal_single_divide_and_conquer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_background"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/goal_info"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="visible"
                android:layout_marginTop="8dp">

            <ImageView
                    android:id="@+id/goal_single_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@mipmap/ic_medal_dark"
                    app:layout_constraintHorizontal_bias="0.500"/>

            <TextView
                    android:id="@+id/goal_single_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/goal_single_image"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"
                    android:layout_marginTop="16dp"/>

            <com.hookedonplay.decoviewlib.DecoView
                    android:id="@+id/goal_single_arcView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:layout_constraintEnd_toEndOf="@+id/goal_single_image"
                    app:layout_constraintStart_toStartOf="@+id/goal_single_image"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="7dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_divide_and_conquer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_divide_and_conquer_bronze"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/goal_divide_and_conquer_silver"
                    app:layout_constraintTop_toTopOf="parent">

                <ImageView
                        android:id="@+id/goal_divide_and_conquer_bronze_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="22dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:background="@mipmap/ic_bronze_dark"/>

                <TextView
                        android:id="@+id/goal_divide_and_conquer_bronze_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/goal_divide_and_conquer_bronze_image"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_bronze_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_bronze_image"
                        android:layout_marginTop="16dp"/>

                <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/goal_bronze_arcView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_bronze_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_bronze_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_divide_and_conquer_silver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/goal_divide_and_conquer_bronze"
                    app:layout_constraintEnd_toStartOf="@+id/goal_divide_and_conquer_gold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                <ImageView
                        android:id="@+id/goal_divide_and_conquer_silver_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="22dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:background="@mipmap/ic_silver_dark"/>

                <TextView
                        android:id="@+id/goal_divide_and_conquer_silver_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/goal_divide_and_conquer_silver_image"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_silver_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_silver_image"
                        android:layout_marginTop="16dp"/>

                <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/goal_silver_arcView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_silver_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_silver_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_divide_and_conquer_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/goal_divide_and_conquer_silver"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                        android:id="@+id/goal_divide_and_conquer_gold_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:background="@mipmap/ic_gold_dark"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:layout_marginTop="22dp"/>

                <TextView
                        android:id="@+id/goal_divide_and_conquer_gold_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/goal_divide_and_conquer_gold_image"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_gold_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_gold_image"
                        android:visibility="visible"
                        android:layout_marginTop="16dp"/>

                <com.hookedonplay.decoviewlib.DecoView
                        android:id="@+id/goal_gold_arcView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        app:layout_constraintEnd_toEndOf="@+id/goal_divide_and_conquer_gold_image"
                        app:layout_constraintStart_toStartOf="@+id/goal_divide_and_conquer_gold_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="7dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/goal_special"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            android:background="@drawable/rounded_background"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/goal_single_divide_and_conquer"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_cl_dec_inc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="@+id/goal_cl_total">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/goal_btn_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_minus"
                    app:tint="@color/colorPrimaryDarkTwo"
                    app:backgroundTint="@color/colorPrimary"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/goal_inc_dec_total"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintVertical_bias="0.3"/>

            <TextView
                    android:id="@+id/goal_inc_dec_total"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintVertical_bias="0.3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/goal_btn_inc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_plus"
                    app:tint="@color/colorPrimaryDarkTwo"
                    app:backgroundTint="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toEndOf="@+id/goal_inc_dec_total"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_cl_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/goal_total_total_hint"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:layout_constraintStart_toStartOf="parent"
                    android:hint="@string/goal_total_total_hint"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="16dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                    app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                    app:layout_constraintHorizontal_bias="0.24"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/goal_total_total"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/colorPrimary"
                        android:inputType="numberDecimal|numberSigned"
                        android:textSize="16sp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/goal_button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_button_save"
                    app:srcCompat="@mipmap/ic_update"
                    app:tint="@color/colorPrimaryDarkTwo"
                    app:backgroundTint="@color/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/goal_total_total_hint"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_cl_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/goal_items_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:overScrollMode="never"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginBottom="-4dp"
                    android:layout_marginTop="-4dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/goal_items_placeholder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                    android:id="@+id/goal_items_placeholder_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@mipmap/ic_app_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.25"/>

            <TextView
                    android:id="@+id/goal_items_placeholder_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_message_empty_items"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@+id/goal_items_placeholder_image"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="32dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/goal_historic_items_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:overScrollMode="never"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/goal_cl_total"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
