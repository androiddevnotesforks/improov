<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                tools:context=".features.goal.presentation.goalform.GoalFormFragment"
                android:background="@color/colorPrimaryDarkOne">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/form_goal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/goalForm_goal_name_til"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:inputType="numberDecimal|numberSigned"
                        android:textColor="@color/colorPrimary"
                        android:hint="Title"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                        app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                        app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                        app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/goalForm_goal_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <android.widget.Button
                        android:id="@+id/goal_form_date"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="set date"
                        android:textColor="@color/colorPrimaryDarkOne"
                        android:background="@drawable/rounded_button"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/goalForm_goal_name_til"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/form_goal_single_mountains"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:background="@drawable/rounded_background"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/form_goal_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/form_goal_single"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        android:visibility="visible"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp">

                    <ImageView
                            android:id="@+id/form_goal_single_image"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@mipmap/ic_medal"
                            app:layout_constraintHorizontal_bias="0.501"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/form_goal_editText_single_til"
                            android:layout_width="@dimen/edit_text_single_mountains"
                            android:layout_height="60dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:hint="Single"
                            android:inputType="numberDecimal|numberSigned"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/form_goal_single_image"
                            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                            app:layout_constraintStart_toStartOf="@+id/form_goal_single_image"
                            app:layout_constraintEnd_toEndOf="@+id/form_goal_single_image">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/form_goal_editText_single"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/form_goal_mountains"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/form_goal_mountain_bronze"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/form_goal_mountain_silver"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                                android:id="@+id/form_goal_mountain_bronze_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:background="@mipmap/ic_bronze"/>

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/form_goal_editText_bronze_til"
                                android:layout_width="@dimen/edit_text_single_mountains"
                                android:layout_height="60dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:hint="Bronze"
                                android:inputType="numberDecimal|numberSigned"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@+id/form_goal_mountain_bronze_image"
                                app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                                app:layout_constraintStart_toStartOf="@+id/form_goal_mountain_bronze_image"
                                app:layout_constraintEnd_toEndOf="@+id/form_goal_mountain_bronze_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/form_goal_editText_bronze"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:inputType="numberDecimal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/form_goal_mountain_silver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp">

                        <ImageView
                                android:id="@+id/form_goal_mountain_silver_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="8dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="8dp"
                                android:background="@mipmap/ic_silver"/>

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/form_goal_editText_silver_til"
                                android:layout_width="@dimen/edit_text_single_mountains"
                                android:layout_height="60dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:hint="Silver"
                                android:inputType="numberDecimal|numberSigned"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="16dp"
                                app:layout_constraintTop_toBottomOf="@+id/form_goal_mountain_silver_image"
                                app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                                app:layout_constraintStart_toStartOf="@+id/form_goal_mountain_silver_image"
                                app:layout_constraintEnd_toEndOf="@+id/form_goal_mountain_silver_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/form_goal_editText_silver"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:inputType="numberDecimal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/form_goal_mountain_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/form_goal_mountain_silver"
                            app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                                android:id="@+id/form_goal_mountain_gold_image"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:background="@mipmap/ic_gold"
                                android:layout_marginEnd="8dp"/>

                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/form_goal_editText_gold_til"
                                android:layout_width="@dimen/edit_text_single_mountains"
                                android:layout_height="60dp"
                                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                                android:hint="Gold"
                                android:inputType="numberDecimal|numberSigned"
                                android:layout_marginBottom="8dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/form_goal_mountain_gold_image"
                                android:layout_marginTop="16dp"
                                app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                                app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                                app:layout_constraintStart_toStartOf="@+id/form_goal_mountain_gold_image"
                                app:layout_constraintEnd_toEndOf="@+id/form_goal_mountain_gold_image">

                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/form_goal_editText_gold"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp"
                                    android:inputType="numberDecimal"/>

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:id="@+id/constraintLayout4"
                        app:layout_constraintTop_toTopOf="parent">

                    <TextView
                            android:id="@+id/form_goal_mountains_enabled"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dividir e conquistar"
                            app:layout_constraintStart_toStartOf="parent"
                            android:textSize="18sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="24dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"/>

                    <Switch
                            android:id="@+id/form_goal_switch_mountains"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            app:layout_constraintStart_toEndOf="@+id/form_goal_mountains_enabled"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/form_goal_mountains_enabled"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintTop_toTopOf="@+id/form_goal_mountains_enabled"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/goalForm_help"
                            android:layout_width="48dp"
                            android:layout_height="32dp"
                            app:layout_constraintTop_toTopOf="@+id/form_goal_mountains_enabled"
                            app:layout_constraintBottom_toBottomOf="@+id/form_goal_switch_mountains"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="16dp">

                        <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_help"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/goal_form_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_background"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:paddingBottom="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/form_goal_single_mountains"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintVertical_bias="0.0"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                <TextView
                        android:id="@+id/goalForm_goal_type_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de meta"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="24dp"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goalForm_help2"
                        android:layout_width="48dp"
                        android:layout_height="32dp"
                        app:layout_constraintTop_toTopOf="@+id/goalForm_goal_type_text"
                        app:layout_constraintBottom_toBottomOf="@+id/goalForm_goal_type_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_help"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RadioButton
                        android:id="@+id/radioButtonLista"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lista"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toStartOf="@+id/radioButtonIncDec"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/radioButtonIncDec"/>

                <RadioButton
                        android:id="@+id/radioButtonIncDec"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contador"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintTop_toBottomOf="@+id/goalForm_goal_type_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.4"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0"/>

                <RadioButton
                        android:id="@+id/radioButtonTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Valor final"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/radioButtonIncDec"
                        android:layout_marginStart="8dp"
                        app:layout_constraintTop_toTopOf="@+id/radioButtonIncDec"
                        app:layout_constraintBottom_toTopOf="@+id/goalForm_goal_inc_dev"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/goalForm_goal_inc_dev"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="32dp"
                        app:layout_constraintTop_toBottomOf="@+id/radioButtonIncDec"
                        android:visibility="gone"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintVertical_bias="0.0">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Defina os valores:"
                            android:textColor="@color/colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:id="@+id/textView2"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/goalForm_goal_inc_value_til"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:inputType="numberDecimal|numberSigned"
                            android:hint="Incrementar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toStartOf="@+id/view3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            android:layout_marginTop="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/goalForm_goal_inc_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <View android:layout_width="1dp"
                          android:layout_height="1dp"
                          app:layout_constraintStart_toStartOf="parent"
                          android:layout_marginStart="8dp"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:layout_marginEnd="8dp"
                          android:id="@+id/view3"
                          app:layout_constraintTop_toTopOf="parent"
                          android:layout_marginTop="8dp"
                          android:layout_marginBottom="8dp"
                          app:layout_constraintBottom_toBottomOf="parent"/>

                    <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/goalForm_goal_dec_value_til"
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:inputType="numberDecimal|numberSigned"
                            android:hint="Decrementar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:boxCornerRadiusTopStart="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusTopEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomEnd="@dimen/dimens_radius_outline"
                            app:boxCornerRadiusBottomStart="@dimen/dimens_radius_outline"
                            app:layout_constraintStart_toEndOf="@+id/view3"
                            android:layout_marginStart="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView2"
                            android:layout_marginTop="8dp">

                        <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/goalForm_goal_dec_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:textSize="16sp"
                                android:inputType="numberDecimal"/>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>